{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "pretty": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "allowUmdGlobalAccess": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "rootDir": "./src",
  "include": [
    "src/**/*"
  ]
}
